# Web Environment Config Template
# Location: apps/web/.env.example

# Supabase (Server & Client)
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Only required for admin/system-level operations (e.g., syncing users on signup)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000

# i18n
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Payments (Example config)
NEXT_PUBLIC_PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_SECRET_KEY=your-paymob-secret-key
